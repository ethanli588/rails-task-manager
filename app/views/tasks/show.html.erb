<h1><%= @task.title %></h1>
<button> <%= link_to "Edit this task", edit_task_path(@task) %>  </button>
<p><%= @task.details %></p>
<% if @task.completed %>
  <span>This task is completed</span>
<% else %>
  <span>This task is not completed yet</span>
<% end %>
<%= link_to "Back to list", tasks_path %>
